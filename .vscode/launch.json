{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Vercel Dev",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vercel Dev with Breakpoints",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vercel", "dev", "--debug"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "cwd": "${workspaceFolder}",
      "restart": true,
      "timeout": 30000,
      "sourceMaps": true,
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "outFiles": ["${workspaceFolder}/.vercel/**/*.js"]
    }
  ]
}